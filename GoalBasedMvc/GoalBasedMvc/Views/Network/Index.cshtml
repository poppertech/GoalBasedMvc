@model IEnumerable<GoalBasedMvc.Models.NetworkRecord>

<div class="panel panel-primary">

    <ol class="breadcrumb">
        <li class="active">Networks</li>
    </ol>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Url</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-area="" asp-controller="Network" asp-action="Get" asp-route-url="@item.Url">@item.Name</a></td>
                    <td>@item.Url</td>
                </tr>
            }
        </tbody>
    </table>

</div>
